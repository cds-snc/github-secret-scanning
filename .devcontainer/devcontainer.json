{
	"name": "GitHub secret scanning",
	"image": "mcr.microsoft.com/devcontainers/python:3.14@sha256:9ad909ce6d84fdcbc7b337ce6d04aa630b766de78074fe64232f6f836f79f0f5",
	"remoteEnv": {
		"PATH": "/home/vscode/.local/bin:${containerEnv:PATH}", // give our installed Python modules precedence
		"PYTHONPATH": "./api"
	},
	"containerEnv": {
		"SHELL": "/bin/zsh"
	},
	"features": {
		"terraform": {
			"version": "1.3.8",
			"tflint": "latest",
			"terragrunt": "0.43.2"
		},
		"aws-cli": {
			"version": "latest"
		}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"github.copilot",
				"redhat.vscode-yaml"
			],
			"settings": {
				"python.pythonPath": "/usr/local/bin/python",
				"python.defaultInterpreterPath": "/usr/local/bin/python",
				"python.linting.enabled": true,
				"python.linting.pylintEnabled": true,
				"python.formatting.autopep8Path": "/usr/local/py-utils/bin/autopep8",
				"python.formatting.blackPath": "/home/vscode/.local/bin/black",
				"python.formatting.yapfPath": "/usr/local/py-utils/bin/yapf",
				"python.linting.banditPath": "/usr/local/py-utils/bin/bandit",
				"python.linting.flake8Path": "/home/vscode/.local/bin/flake8",
				"python.linting.mypyPath": "/usr/local/py-utils/bin/mypy",
				"python.linting.pycodestylePath": "/usr/local/py-utils/bin/pycodestyle",
				"python.linting.pydocstylePath": "/usr/local/py-utils/bin/pydocstyle",
				"python.linting.pylintPath": "/usr/local/py-utils/bin/pylint",
				"python.autoComplete.extraPaths": ["./api"],
				"[python]": {
					"editor.formatOnSave": true
				},
				"[terraform]": {
					"editor.formatOnSave": true
				}
			}
		}
	},
	"postCreateCommand": "cd api && make install && make install-dev",
	"remoteUser": "vscode"
}